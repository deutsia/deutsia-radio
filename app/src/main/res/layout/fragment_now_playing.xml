<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:padding="24dp">

    <!-- Back Button / Toolbar Area -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/backButton"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="Back"
        app:icon="@drawable/ic_arrow_back"
        app:iconTint="?attr/colorOnSurface"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Cover Art -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/nowPlayingCoverCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toTopOf="@id/nowPlayingInfoContainer"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backButton"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintWidth_max="400dp">

        <ImageView
            android:id="@+id/nowPlayingCoverArt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="Album art"
            tools:src="@drawable/ic_radio" />

    </com.google.android.material.card.MaterialCardView>

    <!-- Station Info -->
    <LinearLayout
        android:id="@+id/nowPlayingInfoContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/nowPlayingControlsContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nowPlayingCoverCard">

        <TextView
            android:id="@+id/nowPlayingStationName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="BBC World Service" />

        <TextView
            android:id="@+id/nowPlayingGenre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            tools:text="News â€¢ I2P" />

        <TextView
            android:id="@+id/nowPlayingMetadata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:visibility="gone"
            tools:text="Song Name - Artist"
            tools:visibility="visible" />

    </LinearLayout>

    <!-- Playback Controls -->
    <LinearLayout
        android:id="@+id/nowPlayingControlsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nowPlayingInfoContainer">

        <!-- Play/Pause Button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/playPauseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Play/Pause"
            app:srcCompat="@drawable/ic_pause"
            app:fabSize="normal"
            app:tint="?attr/colorOnPrimaryContainer" />

        <!-- Stop Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/stopButton"
            style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="24dp"
            android:contentDescription="Stop"
            app:icon="@drawable/ic_stop"
            app:iconSize="24dp"
            app:iconTint="?attr/colorOnSecondaryContainer" />

    </LinearLayout>

    <!-- Empty State (when nothing playing) -->
    <LinearLayout
        android:id="@+id/emptyPlayingState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Station Playing"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Select a station from the list"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurfaceVariant" />

    </LinearLayout>

    <!-- Buffering Indicator -->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/bufferingIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone"
        app:indicatorSize="48dp"
        app:layout_constraintBottom_toBottomOf="@id/nowPlayingCoverCard"
        app:layout_constraintEnd_toEndOf="@id/nowPlayingCoverCard"
        app:layout_constraintStart_toStartOf="@id/nowPlayingCoverCard"
        app:layout_constraintTop_toTopOf="@id/nowPlayingCoverCard" />

</androidx.constraintlayout.widget.ConstraintLayout>