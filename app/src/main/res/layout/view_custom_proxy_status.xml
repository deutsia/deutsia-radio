<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/customProxyStatusContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingVertical="12dp"
    android:background="?attr/selectableItemBackgroundBorderless"
    android:focusable="true"
    android:clickable="true">

    <ImageView
        android:id="@+id/customProxyStatusIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_proxy_custom"
        android:contentDescription="@string/cd_custom_proxy_status"
        tools:src="@drawable/ic_proxy_custom" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/customProxyStatusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface"
            tools:text="Connected" />

        <TextView
            android:id="@+id/customProxyStatusDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            tools:text="HTTPS port: 46673" />

    </LinearLayout>

</LinearLayout>
