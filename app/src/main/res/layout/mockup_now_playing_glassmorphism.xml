<?xml version="1.0" encoding="utf-8"?>
<!--
    MOCKUP: Glassmorphism Design
    ============================
    Features:
    - Frosted glass cards with blur effect simulation
    - Translucent overlays with soft gradients
    - Floating elements with subtle shadows
    - Luminous accent colors
    - Clean typography with light weight fonts

    Note: True blur requires RenderScript or custom library like Blurry.
    This mockup uses semi-transparent backgrounds to simulate the effect.
-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0D1A">

    <!-- Background Gradient Layer -->
    <View
        android:id="@+id/backgroundGradient"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/mockup_bg_glassmorphism_gradient" />

    <!-- Floating Orbs for depth (decorative) -->
    <View
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="-40dp"
        android:layout_marginEnd="-60dp"
        android:background="@drawable/mockup_orb_purple"
        android:alpha="0.4" />

    <View
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="bottom|start"
        android:layout_marginBottom="100dp"
        android:layout_marginStart="-50dp"
        android:background="@drawable/mockup_orb_cyan"
        android:alpha="0.3" />

    <!-- Main Content -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingHorizontal="20dp"
        android:paddingBottom="24dp">

        <!-- Glass Toolbar Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/toolbarCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            app:cardBackgroundColor="#33FFFFFF"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="#1AFFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <ImageButton
                    android:id="@+id/backButton"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_arrow_back"
                    android:contentDescription="Back"
                    app:tint="#FFFFFF"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Now Playing"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.05"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <ImageButton
                    android:id="@+id/equalizerButton"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginEnd="4dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_equalizer"
                    android:contentDescription="Equalizer"
                    app:tint="#FFFFFF"
                    app:layout_constraintEnd_toStartOf="@id/likeButton"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <ImageButton
                    android:id="@+id/likeButton"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_favorite_border"
                    android:contentDescription="Favorite"
                    app:tint="#FF6B9D"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Album Art Glass Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/nowPlayingCoverCard"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="24dp"
            app:cardBackgroundColor="#26FFFFFF"
            app:cardCornerRadius="32dp"
            app:cardElevation="16dp"
            app:strokeWidth="2dp"
            app:strokeColor="#33FFFFFF"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbarCard"
            app:layout_constraintWidth_max="300dp"
            app:layout_constraintWidth_percent="0.75">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/nowPlayingCoverArt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="Album art"
                    tools:src="@drawable/ic_radio" />

                <!-- Glass overlay on artwork -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/mockup_glass_overlay" />

            </FrameLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Live Indicator Badge (floating) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/liveIndicatorBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-12dp"
            app:cardBackgroundColor="#E64FFFB2"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:strokeWidth="0dp"
            app:layout_constraintTop_toBottomOf="@id/nowPlayingCoverCard"
            app:layout_constraintStart_toStartOf="@id/nowPlayingCoverCard"
            app:layout_constraintEnd_toEndOf="@id/nowPlayingCoverCard">

            <TextView
                android:id="@+id/liveIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingVertical="6dp"
                android:text="● LIVE"
                android:textColor="#000000"
                android:textSize="11sp"
                android:textStyle="bold"
                android:letterSpacing="0.1" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Station Info Glass Panel -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/infoCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardBackgroundColor="#1AFFFFFF"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="#1AFFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/liveIndicatorBadge">

            <LinearLayout
                android:id="@+id/nowPlayingInfoContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/nowPlayingStationName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="22sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif-medium"
                    android:maxLines="2"
                    android:ellipsize="end"
                    tools:text="Chillhop Radio" />

                <TextView
                    android:id="@+id/nowPlayingGenre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="#99FFFFFF"
                    android:letterSpacing="0.03"
                    tools:text="Lo-Fi • Hip Hop • Chill" />

                <TextView
                    android:id="@+id/nowPlayingMetadata"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:textColor="#4FFFB2"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:visibility="gone"
                    tools:text="♪ Sleepy Fish - Everything's Fine"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/nowPlayingStreamInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:textSize="11sp"
                    android:textColor="#66FFFFFF"
                    android:visibility="gone"
                    tools:text="320 kbps • AAC"
                    tools:visibility="visible" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Playback Controls Glass Container -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/controlsCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="#1AFFFFFF"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="#1AFFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/progressContainer"
            app:layout_constraintTop_toBottomOf="@id/infoCard"
            app:layout_constraintVertical_bias="0.5">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/nowPlayingControlsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- Record Button (Glass) -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/recordButtonCard"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    app:cardBackgroundColor="#33FFFFFF"
                    app:cardCornerRadius="28dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="#33FFFFFF"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/playPauseButtonCard"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <ImageButton
                        android:id="@+id/recordButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_fiber_manual_record"
                        android:contentDescription="Record"
                        app:tint="#FF6B6B" />

                </com.google.android.material.card.MaterialCardView>

                <!-- Main Play/Pause Button (Luminous) -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/playPauseButtonCard"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:cardBackgroundColor="#4FFFB2"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="12dp"
                    app:strokeWidth="0dp"
                    app:layout_constraintStart_toEndOf="@id/recordButtonCard"
                    app:layout_constraintEnd_toStartOf="@id/volumeButtonCard"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <ImageButton
                        android:id="@+id/playPauseButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_pause"
                        android:contentDescription="Play/Pause"
                        app:tint="#0D0D1A" />

                </com.google.android.material.card.MaterialCardView>

                <!-- Volume Button (Glass) -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/volumeButtonCard"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    app:cardBackgroundColor="#33FFFFFF"
                    app:cardCornerRadius="28dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="#33FFFFFF"
                    app:layout_constraintStart_toEndOf="@id/playPauseButtonCard"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <ImageButton
                        android:id="@+id/volumeButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_volume"
                        android:contentDescription="Volume"
                        app:tint="#FFFFFF" />

                </com.google.android.material.card.MaterialCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Progress Section -->
        <LinearLayout
            android:id="@+id/progressContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:orientation="vertical"
            android:paddingHorizontal="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <!-- Glass Progress Bar Track -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="6dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/mockup_progress_track_glass" />

                <View
                    android:id="@+id/bufferProgressBar"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:background="@drawable/mockup_progress_fill_glow" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/playbackElapsedTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textSize="11sp"
                    android:fontFamily="monospace"
                    android:textColor="#66FFFFFF" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="STREAMING"
                    android:textSize="10sp"
                    android:textColor="#4FFFB2"
                    android:letterSpacing="0.1" />

            </LinearLayout>

        </LinearLayout>

        <!-- Recording Indicator (Floating Glass Badge) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/recordingIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:cardBackgroundColor="#E6FF6B6B"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:strokeWidth="0dp"
            app:layout_constraintTop_toTopOf="@id/toolbarCard"
            app:layout_constraintBottom_toBottomOf="@id/toolbarCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="14dp"
                android:paddingVertical="8dp">

                <View
                    android:id="@+id/recordingDot"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/ic_record" />

                <TextView
                    android:id="@+id/recordingTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="00:00"
                    android:textSize="13sp"
                    android:fontFamily="monospace"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Empty State -->
        <LinearLayout
            android:id="@+id/emptyPlayingState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_radio"
                android:alpha="0.3"
                app:tint="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="No Station Playing"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Select a station to begin"
                android:textSize="14sp"
                android:textColor="#66FFFFFF" />

        </LinearLayout>

        <!-- Buffering Indicator -->
        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/bufferingIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="gone"
            app:indicatorSize="56dp"
            app:indicatorColor="#4FFFB2"
            app:trackColor="#1AFFFFFF"
            app:trackThickness="4dp"
            app:layout_constraintBottom_toBottomOf="@id/nowPlayingCoverCard"
            app:layout_constraintEnd_toEndOf="@id/nowPlayingCoverCard"
            app:layout_constraintStart_toStartOf="@id/nowPlayingCoverCard"
            app:layout_constraintTop_toTopOf="@id/nowPlayingCoverCard" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
