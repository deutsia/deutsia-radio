<?xml version="1.0" encoding="utf-8"?>
<!--
    MOCKUP: Neumorphism (Soft UI) Design
    =====================================
    Features:
    - Soft extruded shadows creating depth
    - Inset elements for pressed states
    - Muted, earthy color palette
    - Gentle curves and rounded corners
    - Tactile, physical appearance
    - Minimal color contrast, focus on shadows

    Note: True neumorphism requires careful shadow placement.
    Light source appears from top-left.
-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4E9F2"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:paddingHorizontal="24dp"
    android:paddingBottom="24dp">

    <!-- Top Bar with Soft Buttons -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back Button - Extruded -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/backButtonCard"
            android:layout_width="52dp"
            android:layout_height="52dp"
            app:cardBackgroundColor="#E4E9F2"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:strokeWidth="0dp">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/mockup_neumorphic_button"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Back"
                android:padding="14dp"
                app:tint="#6B7B8F" />

        </com.google.android.material.card.MaterialCardView>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Equalizer Button -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/equalizerButtonCard"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginEnd="12dp"
            app:cardBackgroundColor="#E4E9F2"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:strokeWidth="0dp">

            <ImageButton
                android:id="@+id/equalizerButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/mockup_neumorphic_button"
                android:src="@drawable/ic_equalizer"
                android:contentDescription="Equalizer"
                android:padding="14dp"
                app:tint="#6B7B8F" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Like Button -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/likeButtonCard"
            android:layout_width="52dp"
            android:layout_height="52dp"
            app:cardBackgroundColor="#E4E9F2"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:strokeWidth="0dp">

            <ImageButton
                android:id="@+id/likeButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/mockup_neumorphic_button"
                android:src="@drawable/ic_favorite_border"
                android:contentDescription="Favorite"
                android:padding="14dp"
                app:tint="#E8788A" />

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <!-- Album Art - Large Extruded Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/nowPlayingCoverCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        app:cardBackgroundColor="#E4E9F2"
        app:cardCornerRadius="36dp"
        app:cardElevation="16dp"
        app:strokeWidth="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintWidth_max="280dp"
        app:layout_constraintWidth_percent="0.7">

        <!-- Inner Shadow Container -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="28dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <ImageView
                    android:id="@+id/nowPlayingCoverArt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="Album art"
                    tools:src="@drawable/ic_radio" />

            </com.google.android.material.card.MaterialCardView>

        </FrameLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Station Info Section -->
    <LinearLayout
        android:id="@+id/nowPlayingInfoContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nowPlayingCoverCard">

        <TextView
            android:id="@+id/nowPlayingStationName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:textSize="24sp"
            android:textColor="#3D4F5F"
            android:fontFamily="sans-serif-medium"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="Ambient Sounds" />

        <TextView
            android:id="@+id/nowPlayingGenre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="16dp"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#8D9CAB"
            tools:text="Ambient • Relaxation • Nature" />

        <!-- Metadata in Inset Container -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/metadataCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="8dp"
            app:cardBackgroundColor="#D8DDE6"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/nowPlayingMetadata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="#5A7B8C"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:focusable="true"
                android:focusableInTouchMode="true"
                tools:text="♪ Rain Sounds - Forest Ambience" />

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/nowPlayingStreamInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="16dp"
            android:gravity="center"
            android:textSize="11sp"
            android:textColor="#A8B5C2"
            android:visibility="gone"
            tools:text="192 kbps • OGG"
            tools:visibility="visible" />

    </LinearLayout>

    <!-- Playback Controls - Neumorphic Buttons -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/nowPlayingControlsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nowPlayingInfoContainer"
        app:layout_constraintWidth_max="300dp">

        <!-- Record Button -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/recordButtonCard"
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:cardBackgroundColor="#E4E9F2"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:strokeWidth="0dp"
            app:layout_constraintBottom_toBottomOf="@id/playPauseButtonCard"
            app:layout_constraintEnd_toStartOf="@id/playPauseButtonCard"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/playPauseButtonCard">

            <ImageButton
                android:id="@+id/recordButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/mockup_neumorphic_button"
                android:src="@drawable/ic_fiber_manual_record"
                android:contentDescription="Record"
                android:padding="18dp"
                app:tint="#E07070" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Main Play/Pause - Large Extruded Circle -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/playPauseButtonCard"
            android:layout_width="88dp"
            android:layout_height="88dp"
            app:cardBackgroundColor="#5E8BFF"
            app:cardCornerRadius="44dp"
            app:cardElevation="14dp"
            app:strokeWidth="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/volumeButtonCard"
            app:layout_constraintStart_toEndOf="@id/recordButtonCard"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/playPauseButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_pause"
                android:contentDescription="Play/Pause"
                android:padding="26dp"
                app:tint="#FFFFFF" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Volume Button -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/volumeButtonCard"
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:cardBackgroundColor="#E4E9F2"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:strokeWidth="0dp"
            app:layout_constraintBottom_toBottomOf="@id/playPauseButtonCard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/playPauseButtonCard"
            app:layout_constraintTop_toTopOf="@id/playPauseButtonCard">

            <ImageButton
                android:id="@+id/volumeButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/mockup_neumorphic_button"
                android:src="@drawable/ic_volume"
                android:contentDescription="Volume"
                android:padding="18dp"
                app:tint="#6B7B8F" />

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Progress Section - Inset Track -->
    <LinearLayout
        android:id="@+id/bufferBarContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="24dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nowPlayingControlsContainer"
        tools:visibility="visible">

        <!-- Inset Progress Track -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#D0D5DE"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:padding="0dp">

                <View
                    android:id="@+id/bufferProgressBar"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:background="@drawable/mockup_neumorphic_progress" />

            </FrameLayout>

        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingHorizontal="4dp">

            <TextView
                android:id="@+id/playbackElapsedTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:textColor="#8D9CAB" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/liveIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="● LIVE"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#5E8BFF" />

        </LinearLayout>

    </LinearLayout>

    <!-- Recording Indicator - Soft Badge -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/recordingIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:cardBackgroundColor="#FFDDDD"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        app:strokeWidth="0dp"
        app:layout_constraintTop_toTopOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="@id/topBar"
        app:layout_constraintStart_toEndOf="@id/backButtonCard"
        app:layout_constraintEnd_toStartOf="@id/equalizerButtonCard">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="14dp"
            android:paddingVertical="10dp">

            <View
                android:id="@+id/recordingDot"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/ic_record" />

            <TextView
                android:id="@+id/recordingTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="00:00"
                android:textSize="14sp"
                android:fontFamily="monospace"
                android:textColor="#C05050" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/emptyPlayingState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#E4E9F2"
            app:cardCornerRadius="40dp"
            app:cardElevation="12dp"
            app:strokeWidth="0dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="24dp"
                android:src="@drawable/ic_radio"
                app:tint="#A8B5C2" />

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="No Station Playing"
            android:textSize="18sp"
            android:textColor="#3D4F5F"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Select a station to begin"
            android:textSize="14sp"
            android:textColor="#8D9CAB" />

    </LinearLayout>

    <!-- Buffering Indicator -->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/bufferingIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone"
        app:indicatorSize="52dp"
        app:indicatorColor="#5E8BFF"
        app:trackColor="#D0D5DE"
        app:trackThickness="5dp"
        app:layout_constraintBottom_toBottomOf="@id/nowPlayingCoverCard"
        app:layout_constraintEnd_toEndOf="@id/nowPlayingCoverCard"
        app:layout_constraintStart_toStartOf="@id/nowPlayingCoverCard"
        app:layout_constraintTop_toTopOf="@id/nowPlayingCoverCard" />

</androidx.constraintlayout.widget.ConstraintLayout>
