<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/miniPlayerCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginBottom="16dp"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="?attr/colorSurfaceContainerHighest"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:rippleColor="?attr/colorControlHighlight">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="8dp">

        <!-- Cover Art -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/miniPlayerCoverImage"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_margin="8dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@id/miniPlayerProgress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium"
            tools:src="@drawable/ic_radio" />

        <!-- Station Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@id/miniPlayerCoverImage"
            app:layout_constraintEnd_toStartOf="@id/miniPlayerLikeButton"
            app:layout_constraintStart_toEndOf="@id/miniPlayerCoverImage"
            app:layout_constraintTop_toTopOf="@id/miniPlayerCoverImage">

            <TextView
                android:id="@+id/miniPlayerStationName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="?attr/colorOnSurface"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:text="BBC World Service" />

            <TextView
                android:id="@+id/miniPlayerGenre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="12sp"
                tools:text="News â€¢ I2P" />

        </LinearLayout>

        <!-- Like/Heart Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/miniPlayerLikeButton"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="Like"
            app:icon="@drawable/ic_favorite_border"
            app:iconSize="22dp"
            app:iconTint="?attr/colorOnSurfaceVariant"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/miniPlayerPlayPause"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Play/Pause Button (Hero of the mini player) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/miniPlayerPlayPause"
            style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="Play/Pause"
            app:backgroundTint="?attr/colorSecondaryContainer"
            app:icon="@drawable/ic_pause"
            app:iconTint="?attr/colorOnSecondaryContainer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/miniPlayerClose"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Close Button (Subtle) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/miniPlayerClose"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="Stop"
            app:icon="@drawable/ic_close"
            app:iconSize="20dp"
            app:iconTint="?attr/colorOnSurfaceVariant"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Progress Indicator (Adds life to the component) -->
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/miniPlayerProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:trackColor="?attr/colorSurfaceContainerHighest"
            app:indicatorColor="?attr/colorPrimary"
            app:trackThickness="2dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
