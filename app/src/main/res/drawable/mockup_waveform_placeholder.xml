<?xml version="1.0" encoding="utf-8"?>
<!-- Minimal Dark: Waveform visualization placeholder -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000" />
        </shape>
    </item>
    <!-- Simulated waveform bars pattern -->
    <item android:gravity="center">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="#00FFA3"
                android:centerColor="#1A1A24"
                android:endColor="#00FFA3" />
            <corners android:radius="2dp" />
        </shape>
    </item>
</layer-list>
