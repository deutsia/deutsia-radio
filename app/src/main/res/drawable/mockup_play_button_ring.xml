<?xml version="1.0" encoding="utf-8"?>
<!-- Minimal Dark: Play button with accent ring -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow ring -->
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="2dp"
                android:color="#00FFA3" />
            <solid android:color="#00000000" />
        </shape>
    </item>
    <!-- Inner filled circle -->
    <item
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp">
        <shape android:shape="oval">
            <solid android:color="#00FFA3" />
        </shape>
    </item>
</layer-list>
